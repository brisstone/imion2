<section class="our-facts">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h2 style="color: black; text-align: center;">A Few Facts About Our Institute</h2>
      </div>
      <div style="display: flex; align-items: center;" class="col-lg-6">
        <div class="row">

          <div class="col-lg-6">
            <div class="row">
              <div class="col-12">
                <div class="count-area-content percentage">
                  <div class="count-digit"><%-factContent[0].board%></div>
                  <div class="count-title">Board</div>
                </div>
              </div>
              <div class="col-12">
                <div class="count-area-content">
                  <div class="count-digit"><%-factContent[0].mandate%></div>
                  <div class="count-title">Mandates</div>
                </div>
              </div>
            </div>
          </div>
          <div display: flex; align-items: flex-start; justify-content: flex-start;" class="col-lg-6">
            <div class="row">
              <div class="row">
                <div class="col-12">
                  <div class="count-area-content percentage">
                    <div class="count-digit"><%-factContent[0].directorate%></div>
                    <div class="count-title">Directorate</div>
                  </div>
                </div>
                <div class="col-12">
                  <div class="count-area-content">
                    <div class="count-digit"><%-factContent[0].departments%></div>
                    <div class="count-title">Departments</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6 align-self-center">
        <div class="image">
          <img style="width: 700px; height: 600px; border-radius: 12px;" src="assets/images/Ship.png" alt="logo">
        </div>
      </div>
    </div>
  </div>
</section>